{
  "name": "omnia",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/web-next"
  ],
  "scripts": {
    "dev": "npm --prefix apps/web-next run dev",
    "build": "npm --prefix apps/web-next run build",
    "start": "npm --prefix apps/web-next run start",
    "lint": "npm --prefix apps/web-next run lint",
    "lint:fix": "npm --prefix apps/web-next run lint --fix",
    "test": "npm --prefix apps/web-next run test",
    "test:ui": "npm --prefix apps/web-next run test:ui",
    "test:run": "npm --prefix apps/web-next run test:run",
    "test:coverage": "npm --prefix apps/web-next run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test --config=playwright.visual.config.ts",
    "test:visual:update": "playwright test --config=playwright.visual.config.ts --update-snapshots",
    "type-check": "npm --prefix apps/web-next run type-check",
    "format": "prettier --write \"apps/web-next/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"apps/web-next/src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.16.5",
    "prettier": "^3.5.1",
    "typescript": "^5.8.3"
  }
}
